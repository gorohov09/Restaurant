{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/products", //Upstream - входящие запросы в gateway.
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/products", //Downstream - исходящие запросы из gateway
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7037
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/products/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7037
        }
      ]
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7110"
  }
}