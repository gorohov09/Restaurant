<ul class="navbar-nac">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link" style="color: rebeccapurple" href="#">Привет @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color: rebeccapurple" asp-action="Logout" asp-controller="Home">Выход</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" style="color: rebeccapurple" asp-action="Login" asp-controller="Home">Логин</a>
        </li>
    }

</ul>